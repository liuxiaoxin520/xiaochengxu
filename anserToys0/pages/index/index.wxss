/**index.wxss**/
.banner {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 31%;
}
.rules{
  padding: 0;
  position: fixed;
  top:10px;
  right: 10px;
  width: 60px;
  height: 26px;
  line-height: 26px;
  font-size: 12px;
  background-color: #fff8ea;
  color: white;
  animation: 3s bianse linear infinite;
  
}
.toys{
  position: fixed;
  top: 25%;
  left: 0;
  height: 45%;
  width: 80%;
  margin: 0 10%;
  border-radius: 10px;
  background-color: #fb4538;
  box-shadow:#6c0004 0 0 15px 3px;
}
.toys_text{
  width: 100%;
  height: 10%;
  text-align: center;
  color: white;
  font-size: 18px;
  padding: 10px 0;
  border-bottom: 1px dotted white;
}
.toys_bannerBox{
  width: 80%;
  height: calc(90% - 35px);
  margin: 0 auto;
  overflow-x: scroll;
}
.toys_banner{
  width: 100%;
  height: 100%;
  margin: 10px auto;
}
.toys_banner1{
  height: 100%;
  width: 100%;
}
.more_icon{
  margin: 3px auto;
  display: block;
  width: 16px;
  height: 8px;
  opacity: 0.8;
  animation: tiaodong ease-in-out 2s infinite;
}
.foot_box{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 20%;
}
.start_play{
  position: absolute;
  border-radius: 50%;
  width: 26%;
  height: 88%;
  top: -40%;
  right:20%;
  z-index: 10;
  box-shadow:#2e2e2e 2px 3px 10px 2px;
  animation: 2s suofang linear infinite;
}
.foot_bg{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 20%;
}
.show{
  display: none;
}
.show1{
  display: none;
}
.bg{
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
background-color: rgba(0, 0, 0, 0.8);
}
.bg1{
z-index: 999;
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
background-color: rgba(0, 0, 0, 0.9);
}
.content_box{
  position: relative;
  width: calc(80% - 40px);
  margin:0px 10%;
  margin-top: 60px;
  background-color: #9a0106;
  padding: 20px;
  border-radius: 10px;
}
.content_text{
  color: white;
  font-size: 14px;
  margin-bottom: 10px;
}
.content_text1{
  color: white;
  font-size: 14px;
  text-align: center;
  margin: 20px 0;
}
.content_text2{
  color: white;
  font-size: 14px;
  margin-top: 10px;
  text-align: center;
}
.service{
  background-color: #f7b334;
}
.hide{
  width: 30px;
  height: 30px;
  position: absolute;
  top: -10px;
  right: -10px;
}
.search_formid{
  position: absolute;
  padding: 0;
  width: 26%;
  height: 88%;
  top: -40%;
  right:20%;
  opacity: 0;
  z-index: 999;
}
.hide{
  width: 30px;
  height: 30px;
  position: absolute;
  top: -10px;
  right: -10px;
}
.lost{
  display: block;
  width: 100px;
  height: 110px;
  margin: 0 auto;
}
@keyframes suofang {
  0% {transform: scale(1);}
  50% {transform: scale(0.9);}
  100% {transform: scale(1);}
  }
  @keyframes tiaodong {
  0% {
        -webkit-transform: translateY(5px);
        transform: translateY(5px);
    }
    50% {
        -webkit-transform: translateY(-5px);
        transform: translateY(-5px);
    }
    100% {
        -webkit-transform: translateY(5px);
        transform: translateY(5px);
    }
  }
@keyframes bianse {
  0% {background: #ff2d1e;} 
  50% {background: #ff6a5f;}
  100% {background: #ff2d1e;} 
  }