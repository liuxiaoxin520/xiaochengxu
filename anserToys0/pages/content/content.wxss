/* pages/content/content.wxss */
.bg{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.info_box{
  position: relative;
  width: 90%; 
  height: 90vh;
  margin:5vh 5%;
  background-color: white;
}
.scroll_area{
  width: 90%; 
  height: 90vh;
  margin:5vh 5%;
  overflow-x: scroll;
}
.time{
  width: 40px;
  height: 40px;
  border:3px solid #f6792d;
  border-radius: 50%;
  position: absolute;
  top: 10px;
  right: 10px;
}
.retime{
  color: #fb4538;
  line-height: 40px;
  text-align: center;
}
.pic{
  position: absolute;
  width: 50px;
  height: 50px;
  top: 0;
  left: 50%;
  margin-left: -25px;
  margin-top: -25px;
  border-radius: 50%;
  border: 3px solid white;
  z-index: 10;
}
.name{
  text-align: center;
  font-size: 14px;
  padding-top: 30px;
}
.tip{
  font-size: 14px;
  color: white;
  width: 150px;
  margin: 0 auto;
  margin-top: 10px;
  text-align: center;
  background-color: #f6792d;
  padding:5px;
  border-radius: 20px;
}
.title{
  width: 90%;
  margin: 0 5%;
  font-size: 14px;
  text-align: center;
  color: #fb4538;
}
.question{
  margin-top: 40px;
}
.select{
  width: calc(86% - 10px);
  height: 40px;
  line-height: 40px;
  margin: 20px 7%;
  padding-left: 10px; 
  font-size: 14px;
  text-align: left;
  color: #fb4538;
  border: 1px solid #f6792d;
  border-radius: 20px;
}
.current{
  background-color: #fb4538;
  color: white;
}
.bg1{
z-index: 999;
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
background-color: rgba(0, 0, 0, 0.9);
}
.bg1_img{
  width: 100%;
  height: 100%;
}
.content_box{
  position: relative;
  width: calc(80% - 40px);
  margin:0px 10%;
  margin-top: 100px;
  background-color: #9a0106;
  padding: 20px;
  border-radius: 10px;
}
.content_text{
  color: #ffb13d;
  font-size: 14px;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 10px;
}
.content_text1{
  color: white;
  font-size: 14px;
  text-align: center;
  margin: 20px 0;
}
.service{
  color:white;
  background-color:#ffb13d;
}
.show{
  display:none;
}
.show1{
  display:none;
}
.hide{
  width: 30px;
  height: 30px;
  position: absolute;
  top: -10px;
  right: -10px;
}
.lost{
  display: block;
  width: 100px;
  height: 110px;
  margin: 0 auto;
}
.startTime{
  width: 50px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 999;
  margin-left: -27px;
  margin-top: -30px;
  color: white;
  font-size: 100px;
}
.win{
  position: absolute;
  width: 200px;
  top:0;
  left: 50%;
  margin-left: -100px;
  text-align: center;
  line-height: 24px;
  font-size: 24px;
  color: white;
}