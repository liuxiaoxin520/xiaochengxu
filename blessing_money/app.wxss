}
.index_content_input2{
  width: 85%;
  float: left;
  font-size: 12px;
  margin-top: 5px;
  border-radius: 5px;
  box-shadow: #999 3px 3px 5px;
}
.index_content_info{
  padding: 0 20px;
}
.index_content_info_mt{
  width: 50%;
  float: left;
}
.index_content_info1{
  padding: 0 20px;
}
.index_content_info1 text{
  font-size: 12px;
  color: #ccc;
}
.index_content_title{
  width: 80px;
