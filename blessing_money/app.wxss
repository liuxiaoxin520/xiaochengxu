.switchPlay{
  width: 120px;
  font-size: 14px;
  color: #6ac253;
  margin-top: 10px;
  margin-bottom: 20px;
}
.voicePhone{
  display: block;
  width:100%;
  height: 46px;
  float: left;
  margin: 0 auto;
  margin-top: 5px;
  border-radius: 5px;
  box-shadow: #999 3px 3px 5px;
}
.nav{
  width: 100%;
  height: 50px;
  margin-bottom: 20px;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  background-color: #d24646;
}
.nav_text{
  font-size: 20px;
  color: white;
  line-height: 50px;
  margin-left: 10px;
}
.nav_hide{
  width: 40px;
  height: 40px;
  float: right;
  margin-top: 5px;
  margin-right: 5px;
}
.index_content{
  position: fixed;
  width: 100%;
  height: 430px;
  background-color: white;
  border-radius: 5px;
  padding-bottom: 30rpx;
  box-shadow: #000 0px 0px 5px;
  z-index: 999;
}
.index_content_input1{
  width: 100%;
  float: left;
  font-size: 12px;
