/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.clearfix{
  clear: both;
}

/* 公共类 */
.music{
  width: 35px;
  height: 35px;
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 999;
}
.info_box{
  width: 200px;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -100px;
  z-index: 3;
  }
.photo{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -56rpx;
  margin-top: -56rpx;
  z-index: 3;
  border: 2px solid rgba(0, 0, 0, 0.2);
  background-color: white;
}
.name{
  color: white;
  text-align: center;
  font-size: 12px;
  margin-top: 70rpx;
  margin-bottom: 20rpx;
}
.tip{
  font-size: 16px;
  color: white;
  text-align: center;
}
.theme_button{
  display: block;
  height: 50px;
  width: 200px;
  margin: 0 auto;
  margin-top: 20px;
}

