.bg_img{
  display: block;
  width: 100%;
  height: 220px;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100%;

}
.header{
  height: 30px;
  width: 166px;
  margin: 0 auto;
  border: 2px solid black;
  border-radius: 20px;
  background-color: rgba(0, 0, 0, 0.3);
  margin-bottom: 40px;
  box-shadow: #000 2px 2px 10px;
}
.header_left{
  width: 50%;
  font-size: 14px;
  text-align: center;
  line-height: 30px;
  color: #ccc;
  float: left;
}
.header_right{
  width: 50%;
  font-size: 14px;
  text-align: center;
  line-height: 30px;
  color: #ccc;
  float: left;
}
.left_select{
  height: 26px;
  width: 80px;
  line-height: 26px;
  margin: 0 auto;
}
.right_select{
  height: 26px;
  width: 80px;
  line-height: 26px;
  margin: 0 auto;
}
.current{
  color: #d24646;
  border: 2px solid black;
  border-radius: 20px;
  background-color: #ffec91;
  box-shadow: -5px -5px 5px #bca63f inset;
}
.show{
  display: none;
}
.photo{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  margin-bottom: 10px;
  border: 2px solid rgba(0, 0, 0, 0.1);
}
.container{
  width: 100%;
  margin: 0;
  padding: 0;
  margin-top: 30px;
}
.container_name{
  text-align: center;
  font-size: 14px;
}
.bigBox{
  margin-top: 30px;
  margin-bottom: 50px;
}
.sendMoney_box{
  width: calc(50% - 1px);
  border-right: 1px solid #ffec91;
  float: left;
}
.sendCount_box{
  width: calc(50% - 1px);
  border-left: 1px solid #ffec91;
  float: left;
}
.bigBox_tip{
  text-align: center;
  font-size: 14px;
  color: #ffec91;
}
.money{
  color: #ffec91;
  font-size: 30px;
  text-align: center;
}
.container_count{
  color: #ffec91;
  font-size: 30px;
  text-align: center;
}

/* 详情 */
.detial{
  width: calc(100% - 40px);
  padding: 0 20px;
  margin-top: 20px;
  float: left;
}
.detailHeader{
  font-size: 12px;
  color: #808080;
  margin-bottom: 10px;
}
.detialContent{
  padding:10px 0;
  border-bottom: 1px solid #e5e5e5;
}
.detialPhoto{
  display: block;
  float: left;
  width: 84rpx;
  height: 84rpx;
  margin-right: 5px;
  border-radius: 50%;
  z-index: 1;
}
.detialInfo{
  float: left;
}
.detialcount{
  color: #333;
  font-size: 14px;
  margin-top: 10px;
}
.detailRight{
  float: right;
}
.detailMoney{
  text-align: right;
  font-size: 14px;
}
.detailMore{
  text-align: right;
  font-size: 14px;
  margin-top: 5px;
  color:#61bbfb;
}
.detailTimet{
  font-size: 12px;
  color: #999;
}

