.bg_color{
  width: 100%;
  height:79.3vh; 
  padding-bottom: 20vh;
  background-color: #d24646;
}
.top-start{
  width: 100%;
  height:100%;
  position:fixed;
  top:-100%; 
}
.photo1{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  position: fixed;
  bottom:270px;
  left: 50%;
  margin-left: -56rpx;
  z-index: 3;
  border: 2px solid rgba(0, 0, 0, 0.2);
  background-color: white;
}
.footer{
  width: 100%;
  height: 300px;
  position: absolute;
  overflow-x: scroll;
  left: 0;
  bottom: 0;
  background-color: #cf4848;
  box-shadow: #000 0px 0px 5px;
  z-index: 1;
}
input{
  height: 40px;
  border: 3px solid #000;
  border-radius: 5px;
  padding-left: 8px;
  font-size: 14px;
}
.wishes_world{
  width: 200px;
  height: 30px;
  margin: 0 auto;
  line-height: 16px;
  font-size: 14px;
  color: white;
  text-align: center;
}
.playVoice1{
  width: 80px;
  height: 30px;
  margin: 0 auto;
  border: 2px solid black;
  border-radius: 5px;
  background-color: #ff9536;
  font-size: 16px;
  font-weight: 550;
  line-height: 30px;
  text-align: center;
  color: white;
}
.over_tip{
  position: absolute;
  height: 120rpx;
  width: 240rpx;
  top: 0;
  left: 0;
  border: 2px solid black;
  border-radius: 5px;
  background-color: #ff9536;
  font-size: 18px;
  font-weight: 550;
  line-height: 120rpx;
  text-align: center;
  color: white;
}
.over_tip1{
  position: absolute;
  height: 120rpx;
  width: 240rpx;
  top: 0;
  left: 0;
  border: 2px solid black;
  border-radius: 5px;
  background-color: #ccc;
  font-size: 18px;
  font-weight: 550;
  line-height: 30px;
  text-align: center;
  color: black;
}
.turnCoin{
  position: relative;
  height: 120rpx;
  width:240rpx;
  margin: 0 auto;
  margin-top: 10px;
}
.turnCoin image{
  height: 120rpx;
  width:120rpx;
  margin-left: 60rpx;
}
.show_Money{
  position: absolute;
  height: 120rpx;
  width: 240rpx;
  top: 0;
  left: 0;
  font-size: 26px;
  font-weight: bold;
  line-height: 120rpx;
  text-align: center;
  color: white;
}
.imgBox{
  margin-top: 20px;
  width: calc(100% / 3);
  float: left;
  background-color: #cf4848;
}
.imgBox image{
  display: block;
  margin: 0 auto;
  width: 32px;
  height: 32px;
}
.imgBox_text{
  margin-top: 5px;
  line-height: 14px;
  font-size: 12px;
  text-align: center;
  color: white;
}
button::after{
  border: none;
}

/* 详情 */
.detial{
  margin: 0 20px;
  margin-top: 270px;
}
.detailHeader{
  font-size: 12px;
  color: white;
  margin-bottom: 10px;
}
.detialContent{
  padding:10px 0;
  border-bottom: 1px solid #e5e5e5;
}
.detialPhoto{
  display: block;
  float: left;
  width: 84rpx;
  height: 84rpx;
  margin-right: 5px;
  border-radius: 50%;
  z-index: 1;
  border: 2px solid #ccc;
}
.detialInfo{
  position: relative;
  float: left;
}
.detialName{
  color: white;
  font-size: 14px;
}
.playStyle{ 
position: absolute; 
top:24px;
width: 40rpx;
height: 40rpx; 
border-radius: 5px; 
background: #ff7e3e; 
z-index: 999;
} 

.detailRight{
  float: right;
}
.detailMoney{
  text-align: right;
  font-size: 12px;
  color: white;
  margin-bottom: 10px;
}
.detailTimet{
  font-size: 12px;
  color: white;
}
