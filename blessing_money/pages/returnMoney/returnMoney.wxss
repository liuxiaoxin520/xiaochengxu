.bg_img{
  display: block;
  width: 100%;
  height: 220px;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100%;
}
.myMoney1{
  color: white;
  text-align: center;
  font-size: 16px;
}
.myMoney_tip{
  margin-top: 10px;
  color: #e5e5e5;
  text-align: center;
  font-size: 12px;
}
.coin{
  display: block;
  margin: 0 auto;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 20px;
  box-shadow: #000 2px 2px 5px;
}
.input_box{
  width: calc(100% - 60px);
  height: 120px;
  margin: 0 30px;
  border: 2px solid black;
  box-shadow: #999 3px 3px 2px inset;
  position: relative;
}

.input_box_tip{
  font-size: 14px;
  margin-top: 10px;
  text-align: center;
}

.return_count{
  height: 30px;
  width: calc(100% - 10px);
  margin: 0 5px;
  font-size: 12px;
  line-height: 30px;
  border-top:1px solid #e5e5e5; 
  position: absolute;
  bottom: 0;
}
.returnMoney{
  display: block;
  height: 50px;
  width: 60%;
  border-radius: 5px;
  margin: 0 auto;
  margin-top: 50px;
  box-shadow: #999 3px 3px 5px;
}
.return_money_content{
  width:110px;
  height: 40px;
  margin: 0 auto;
  margin-top: 15px;
}
.return_money_content text{
  display: block;
  font-size: 30px;
  float: left;
  }
.return_money_content input{
  padding-top: 8px;
  font-size: 24px;
  text-align: center;
}
.returnMoney_tip{
  font-size: 12px;
  color: #999;
  margin-top: 5px;
  text-align: center;
}
.problem_list{
  width: 110px;
  height: 20px;
  margin: 0 auto;
  margin-top: 30px;
}
.problem{
  float: left;
  font-size: 12px;
  color: #6ac253;
}
.list{
  float: right;
  font-size: 12px;
  color: #6ac253;
}