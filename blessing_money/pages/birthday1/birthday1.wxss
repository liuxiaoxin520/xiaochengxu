.bg_color{
  width: 100%;
  height:79.3vh; 
  padding-bottom: 20vh;
  background-color: #d24646;
}
.top-start{
  width: 100%;
  height:100%;
  position:fixed;
  top:-100%; 
}

.footer{
  width: 100%;
  height: 180px;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #479d2f;
  box-shadow: #000 0px 0px 5px;
  z-index: 1;
}
.info_box{
  width: 200px;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -100px;
  z-index: 3;
  }
.photo{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -56rpx;
  margin-top: -56rpx;
  z-index: 3;
  border: 2px solid rgba(0, 0, 0, 0.2);
  background-color: white;
}
.name{
  color: white;
  text-align: center;
  font-size: 12px;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
}
.tip{
  font-size: 16px;
  color: white;
  text-align: center;
}
.theme_button{
  display: block;
  height: 50px;
  width: 200px;
  margin: 0 auto;
  margin-top: 20px;
}

