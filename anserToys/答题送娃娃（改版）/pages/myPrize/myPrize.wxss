/**index.wxss**/
page{
  background-color: white;
}
.heard_box{
  background-color: #0047d7;
  height: 140px;
  padding-top: 10px;
}
.heard{
  position: relative;
  width: 100%;
  height: 100px;
}
.pic{
  display: block;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin:0 auto;
}
.ranking_img{
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-bottom: -20px;
  margin-left: -90px;
  height: 40px;
  width: 180px;
}
.ranking_text{
  height: 40px;
  width: 180px;
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-bottom: -20px;
  margin-left: -90px;
  text-align: center;
  font-size: 18px;
  color: white;
  line-height: 32px;
}
.service_box{
  position: fixed;
  top: 20px;
  right: 15px;
  width: 28px;
}
.service{
  position: fixed;
  top: 20px;
  right: 15px;
  height: 36px;
  width: 28px;
}
.play_box{
  background-color: #0047d7;
  padding-bottom: 20px;
  width: 100%;
}
.play_left,.play_right{
  float: left;
  width: 50%;
  font-size: 16px;
  text-align: center;
  color: white;
}

.color{
  color: #efbf18;
  font-size: 18px;
}
.ci{
  font-size: 12px;
}
.more_play{
  background-color: white;
  padding-bottom: 0.1px;
}
.more_playText{
  color: #226bff;
  font-size: 16px;
  text-align: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}
.jump_more{
  width: calc(100% - 20px);
  height: 80px;
  background-color: white;
  padding: 10px 10px;  
  margin-bottom: 5px;
  border-bottom: 1px solid #eee;
}
.more_photo{
  height: 80px;
  width: 80px;
  float: left;
  border-radius: 5px;
  margin-right: 10px;
}
.more_name{
  font-size: 18px;
  margin-top: 5px;
}
.detail{
  font-size: 14px;
  color: #666;
  margin-top: 4px;
}
.detail_box{
  float: left;  
}
.go{
  float: right;
  color: #fb4538;
  border: 1px solid #fb4538;
  padding: 3px;
  font-size: 14px;
  border-radius: 5px;
  margin-top: 25px;
}