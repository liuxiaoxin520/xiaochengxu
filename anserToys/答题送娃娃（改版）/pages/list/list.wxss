.select_right,.select_left{
  border-right: 1px solid #999;
}
.select_right,.select_left,.select_center{
  float: left;
  width: calc((100% - 2px) / 3);
  height: 100%;
  text-align: center;
  color: #fb4538;
  font-size: 16px;
  line-height: 60px;
  background-color: #ccc;
}
.showarea{
  margin-top: 70px;
}
.list1{
  height: 60px;
  margin: 5px 2%;
}

.list2{
