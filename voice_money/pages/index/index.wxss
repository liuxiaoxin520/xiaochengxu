/**index.wxss**/
.index_content{
  margin: 0 25px;
  margin-top:80rpx; 
  position: relative;
  background-color: white;
  border-radius: 5px;
  padding-top: 65rpx;
  padding-bottom: 40rpx;
  box-shadow: 0 3px 15px #888888;
}
.index_content_info{
  padding: 0 20px;
}
.index_content_info_mt{
  margin-top: 30px;
}
.index_content_info1{
  padding: 0 20px;
}
.index_content_info1 text{
  font-size: 12px;
  color: #ccc;
}
.index_content_title{
  width: 30%;
  font-size: 16px;
  font-weight: 550;
  float: left;
}
.index_content_input{
  width: 70%;
  float: left;
  font-size: 12px;
  border-bottom: 1px solid #ccc;
}
.index_content_input input{
  float: left;
}
.index_content_input text{
  line-height: 27px;
  color: black;
  float: right;
}
.photo{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -56rpx;
  margin-top: -56rpx;
  z-index: 1;
  border: 2px solid rgba(0, 0, 0, 0.2);
}
.name{
  text-align: center;
  font-size: 12px;
  margin-bottom: 15px;
}
.index_content_botton{
  margin:10px 20px;
  color: white; font-size: 16px;
}
.index_content_info3{
  text-align: center;
  font-size: 12px;
  color:#ccc;
}
.index_content_info4{
  margin-top: 50rpx;
  text-align: center;
  font-size: 14px;
  color:#61bbfb;
}
.footer{
  width: calc(100% - 40px);
  height: 60px;
  padding:0 20px; 
  position: fixed;
  bottom: 0;
  background-color: white;
}
.footer view{
  float: left;
  width: 25%;
}
.foot_img{
  width:22px;
  height:22px;
  margin:5px auto;
  margin-top:10px;
  display:block;
}
.tubiao_why1{
  width:12px;
  height:12px;
  display:block;
  margin-top: 12px;
  margin-left:5px;
  float: left;
}
.footer text{
  display: block;
  font-size: 12px;
  color: black;
  text-align: center;
}

