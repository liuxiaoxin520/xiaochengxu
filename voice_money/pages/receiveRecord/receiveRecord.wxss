button::after{
border: none;
}
.index_content{
  margin: 0 25px;
  margin-top:80rpx; 
  position: relative;
  border-radius: 5px;
  padding-top: 65rpx;
  padding-bottom: 40rpx;
  box-shadow: 0 3px 15px #888888;
}
.deraction1{
  width: 10px;
  height: 10px;
  border-radius: 5px;
  border: 1px solid #b3b3b3;
  background-color: #ccc;
  position: absolute;
  top: 5px;
  left: 5px;
  z-index: 999;
}
.deraction2{
  width: 10px;
  height: 10px;
  border-radius: 5px;
  border: 1px solid #b3b3b3;
  background-color: #ccc;
  position: absolute;
  top: 5px;
  right: 5px;
  z-index: 999;
}
.deraction3{
  width: 10px;
  height: 10px;
  border-radius: 5px;
  border: 1px solid #b3b3b3;
  background-color: #ccc;
  position: absolute;
  bottom: 5px;
  left: 5px;
  z-index: 999;
}
.deraction4{
  width: 10px;
  height: 10px;
  border-radius: 5px;
  border: 1px solid #b3b3b3;
  background-color: #ccc;
  position: absolute;
  bottom: 5px;
  right: 5px;
  z-index: 999;
}
.photo{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -56rpx;
  margin-top: -56rpx;
  z-index: 1;
  border: 2px solid rgba(0, 0, 0, 0.2);
}
.name{
  text-align: center;
  font-size: 12px;
}
.time{
  font-size: 12px;
  text-align: center;
  color: #666;
  margin: 5px 0;
}
.shareContent{
  margin: 0 50px;
  margin-top: 15px;
  margin-bottom: 25px;
}
.imgBox{
  width: calc(100% / 3);
  float: left;
}
.imgBox image{
  display: block;
  margin: 0 auto;
  width: 32px;
  height: 32px;
}
.imgBox_text{
  line-height: 32px;
  font-size: 14px;
  text-align: center;
  color: #ff7e3e;
}
.voicePhone{
  display: block;
  height: 80px;
  width: 80px;
  margin: 0 auto;
  margin-top:20px;
}
.voice_countent{
  width:90%;
  height: 50px;
  margin: 0 auto;
  background-color: white;
  border: 3px solid black;
  border-radius: 10px;
  color: #d24d46; 
  text-align: center;
  line-height: 50px;
  font-size: 16px;
  font-weight: bold;
}

.item-style{ 
margin-top: 30rpx; 
margin-bottom: 30rpx; 
} 

.board { 
overflow: hidden; 
border-bottom: 2rpx solid #26A5FF; 
} 

/* 详情 */
.detial{
  margin: 0 20px;
  margin-top: 20px;
}
.detailHeader{
  font-size: 12px;
  color: #808080;
  margin-bottom: 10px;
}
.detialContent{
  padding:10px 0;
  border-bottom: 1px solid #e5e5e5;
}
.detialPhoto{
  display: block;
  float: left;
  width: 84rpx;
  height: 84rpx;
  margin-right: 5px;
  border-radius: 50%;
  z-index: 1;
  border: 2px solid #ccc;
}
.detialInfo{
  position: relative;
  float: left;
}
.detialName{
  color: #333;
  font-size: 14px;
}
.playStyle{ 
position: absolute; 
top:24px;
width: 40rpx;
height: 40rpx; 
border-radius: 5px; 
background: #ff7e3e; 
z-index: 999;
} 
.play-style{ 
position: absolute; 
width: 40rpx;
height: 40rpx; 
border-radius: 5px; 
background: #ff7e3e; 
z-index: 999;
} 
.playIcon{
  float: left;
  width: 40rpx;
  height: 40rpx;
  border-radius: 5px;
  margin-top: 5px;
  margin-right: 8px;
  background-color: #ff7e3e;
}
.playTime{
  color: #999;
  float: left;
  margin-top: 5px;
  font-size: 14px;
}
.detailRight{
  float: right;
}
.detailMoney{
  text-align: right;
  font-size: 12px;
  margin-bottom: 10px;
}
.detailTimet{
  font-size: 12px;
  color: #b3b3b3;
}


/* 弹幕 */
.page-section{
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}
.button{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.aon{
position: absolute;
white-space:nowrap;
animation-timing-function: linear;
animation-fill-mode: none;
}
.doommview{
  z-index: 3;
  height: 80%;
  width: 100%;
/*  position: absolute;  */
}

@keyframes first{
  from{left: 100%; }
  to{left: -100%;}
}


/* 接收后的界面 */
.alreadyDeceivedTip{
  color: white;
  height:35px;
  width: 70px;
  background-color: #ff7e3e;
  border-radius: 15px;
  text-align: center;
  line-height: 35px;
  font-size: 18px;
  margin: 0 auto;
  margin-top: 10px;
  margin-bottom: 30px;
  opacity: 0.9;
}
.alreadyDeceivedMoney{
  color: #ff7e3e;
  text-align: center;
  line-height: 25px;
  font-size: 30px;
  margin-top: 10px;
  opacity: 0.8;
}
.alreadyDeceivedDetail{
  font-size: 14px;
}
.returnMoneyTip{
  font-size: 12px;
  color: #999;
  text-align: center;
}