/**index.wxss**/
page{
  background: #000438;
}
.toptitle{
  text-align: center;
  font-size: 24px;
  margin-bottom: .5em;
  color: white;
}
.allbg{
  background: #000438;
  width: 100%;
  height: 100%;
  background:url("http://shops.mqvt6.cn/349564099542119260.png") no-repeat;
  background-size: 100% 100%;
  overflow-x: hidden;
}

button.kaishi,button.lishi{
  background: #fdff74;
  padding:0;
  margin:0;
  color: #000;
}

button.kaishi{
  padding:0;
  margin:0;
  color: #fff;
  animation: 3s bianse linear infinite;
}

button.kaishi::after,button.lishi::after{
  border:none;
  padding:0;
  margin:0;
}

.btnbox{
  margin: 2rem 0 0;
}
.placeholder{margin: 0 5px;}
.homebtn {
    position: relative;
    display: block;
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
    font-size: 18px;
    text-align: center;
    text-decoration: none;
    color: #FFFFFF;
    line-height: 2.55555556;
    border-radius: 5px;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overflow: hidden;
    border: 2px solid #FFFFFF;
}
.btn_go{
  background: #62321c;
  border: 2px solid #3c1802;
  color: #e9d99b;
}
.btn_cj{
  background: #f6e3ab;
  border: 2px solid #3c1802;
  color: #3c1802;
}


@keyframes bianse {
  0% {background: #fc00ff;} 
  50% {background: #e596e8;}
  100% {background: #fc00ff;} 
  }

.gengduo{margin-top:20rpx;background: #fdff74;color:#000;}

@keyframes suofang {
  0% {transform: scale(1);}
  50% {transform: scale(0.9);}
  100% {transform: scale(1);}
  }


button.qunfa {
  width: 130rpx;
  height: 120rpx;
  position: fixed;
  background-color: rgba(255, 255, 255, 0);
  right: 10rpx;
 bottom:20rpx;
  z-index: 9999;
  margin:0;
  padding:0;
}

button::after {
  border: none;
}

.wxlogo {
  width: 130rpx;
  height: 120rpx;
  animation: 2s suofang linear infinite;
}

text.tishi {
  display: block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #fe0000;
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  color:#fff;
  font-size: 28rpx;
  font-weight: 800;
  z-index: 100;
  animation: 2s suofang linear infinite;
} 
.list_box{
  width: 50px;
  height: 64px;
  margin: 0 auto;
  margin-top: 50px;
}
.list{
  width: 30px;
  height: 30px;
  margin-left: 10px;
}
.list_tip{
  color: white;
  font-size: 14px;
  line-height: 14px;
  text-align: center;
}